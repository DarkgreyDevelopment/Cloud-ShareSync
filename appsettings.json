{
  "Core": {
    "EnabledFeatures": "Log4Net, Encryption, Compression, BackBlazeB2, BucketSync, Sqllite",
    "EnabledCloudProviders": "BackBlazeB2"
  },
  "BucketSync": {
    "WorkingDirectory": "/working",
    "RootFolder": "/backup",
    "ExcludePaths": [
      "/backup/ExamplePathToExclude1",
      "/backup/ExamplePathToExclude2"
    ],
    "MonitorSubDirectories": true,
    "EncryptBeforeUpload": true,
    "CompressBeforeUpload": true,
    "UniqueCompressionPasswords": true,
    "ObfuscateUploadedFileNames": true
  },
  "Database": {
    "UseSqllite": true,
    "SqlliteDBPath": "/database",
    "UsePostgres": false,
    "PostgresConnectionString": ""
  },
  "Compression": {
    "DependencyPath": "/usr/lib/p7zip/7z",
    "InterimZipName": "InterimZipName",
    "InterimZipPath": "/working",
    "CompressionCmdlineArgs": "",
    "DeCompressionCmdlineArgs": ""
  },
  "BackBlaze": {
    "applicationKeyId": "{applicationKeyId}",
    "applicationKey": "{applicationKey}",
    "bucketName": "{bucketName}",
    "bucketId": "{bucketId}",
    "MaxConsecutiveErrors": 5,
    "UploadThreads": 25
  },
  "Log4Net": {
    "ConfigurationFile": "",                                   /* To override the default logging configuration specify the path to a log4net (xml) config file. */
    "EnableDefaultLog": true,                                  /* Change to false to disable the default logging configuration. */
    "DefaultLogConfiguration": {                               /* Configure logging defaults. Required section if EnableDefaultLog is true. */
      "FileName": "Cloud-ShareSync.log",                       /* Customize the log file name. */
      "LogDirectory": "/log",                                  /* Set default log directory. An empty string will put logs in the applications root directory. */
      "RolloverCount": 25,                                     /* Set the number of old logs to keep/rollover. */
      "MaximumSize": 5,                                        /* Maximum individual log size (in MB). */
      "LogLevels":                                             /* Logging levels to send to the default log file. */
        "Fatal, Error, Warn, Info, Debug"                      /* Supported log levels are Fatal, Error, Warn, Info, Debug, and Telemetry */
    },
    "EnableTelemetryLog": true,                                /* Change to false to disable the TelemetryLog. The telemetry log only listens to the telemetry stream. */
    "TelemetryLogConfiguration": {                             /* Configure TelemetryLog defaults. Required section if EnableTelemetryLog is true.  */
      "FileName": "Cloud-ShareSync-Telemetry.log",             /* Customize the TelemetryLog file name. */
      "LogDirectory": "/log",                                  /* Set the telemetry log directory. An empty string defaults to the applications root directory. */
      "RolloverCount": 10,                                     /* Set the number of TelemetryLogs to keep/rollover. */
      "MaximumSize": 5                                         /* Maximum individual log size (in MB). */
    },
    "EnableConsoleLog": false,                                 /* Change to false to disable console logging. */
    "ConsoleConfiguration": {                                  /* Required section if EnableConsoleLog is true. */
      "UseStdErr": true,                                       /* Send Fatal/Error messages to the console stderr stream? */
      "LogLevels":                                             /* Logging levels to send to the console. */
        "Fatal, Error, Warn, Info, Debug"                      /* Supported log levels are Fatal, Error, Warn, Info, Debug, and Telemetry */
    }
  }
}
