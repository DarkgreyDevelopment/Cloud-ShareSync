<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <AssemblyName>SimpleBackup</AssemblyName>
        <TargetFramework>net6.0</TargetFramework>
        <OutputType>Exe</OutputType>
        <RootNamespace>Cloud_ShareSync.SimpleBackup</RootNamespace>
        <AssemblyVersion>0.0.0.0</AssemblyVersion>
        <FileVersion>0.0.0.0</FileVersion>
        <InformationalVersionAttribute>1.0.0-PreRelease0+0000</InformationalVersionAttribute>
        <PackageId>CloudShareSync.SimpleBackup</PackageId>
        <Authors>Taylor Marvin</Authors>
        <Company>Darkgrey Development</Company>
        <Description>A backup application that can back files up to Backblaze B2 cloud storage.</Description>
        <Copyright>Darkgrey Development (2022)</Copyright>
        <PackageProjectUrl>https://cloud-sharesync.com/</PackageProjectUrl>
        <PackageTags>Backup Utility;backblaze-b2;compression;encryption</PackageTags>
        <RepositoryUrl>https://github.com/DarkgreyDevelopment/Cloud-ShareSync/</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <NeutralLanguage>en</NeutralLanguage>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <DebugType>embedded</DebugType>
        <ProduceReferenceAssembly>True</ProduceReferenceAssembly>
        <GenerateDocumentationFile>True</GenerateDocumentationFile>
        <EnforceCodeStyleInBuild>True</EnforceCodeStyleInBuild>
        <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
        <PackageIcon>..\..\docs\images\Logo.png</PackageIcon>
        <ApplicationIcon>..\..\docs\images\logo.ico</ApplicationIcon>
        <TieredCompilation>false</TieredCompilation>
        <PublishReadyToRunComposite>true</PublishReadyToRunComposite>
    </PropertyGroup>

  <ItemGroup>
      <None Include="..\..\docs\images\Logo.png">
          <Pack>True</Pack>
          <PackagePath>\</PackagePath>
      </None>
      <None Include="..\..\docs\images\logo.ico"></None>
  </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Core\Cloud-ShareSync.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Hosting" Version="6.0.1" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
    </ItemGroup>
</Project>